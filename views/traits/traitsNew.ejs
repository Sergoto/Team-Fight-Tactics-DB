<link rel="stylesheet" type="text/css" href="/public/css/style.css" />

<h1>Add Item</h1>
<form class="form" action="/traits/add" method="POST">
    <div class="inputParent">
        <label class="font" for="name">Name:</label>
        <input class="font input" type="text" name="name" />
        <label class="font" for="champions">Champions:</label>
        <input class="font input" type="text" name="champions" />
        <label class="font" for="bonus">Bonus:</label>
        <input class="font input" type="text" name="bonus" />
        <label class="font" for="set">Set:</label>
        <input class="font input" type="text" name="set" />
    </div>

    <input class="font button submit" type="submit" />
    <a class="font button cancel" href="/">Cancel</a>
</form>