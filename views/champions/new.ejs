<link rel="stylesheet" type="text/css" href="/public/css/style.css">

<h1>Add Champions</h1>
<form class="form" action="/champions/add" method="POST">
    <div class="inputParent">
        <label class="font" for="name">Name:</label>
        <input class="font input" type="text" name="name" />
        <label class="font" for="img">Image:</label>
        <input class="font input" type="text" name="img" />
        <label class="font" for="cost">Cost:</label>
        <input class="font input" type="text" name="cost" />
        <label class="font" for="origin">Origin:</label>
        <input class="font input" type="text" name="origin" />
        <label class="font" for="class">Class:</label>
        <input class="font input" type="text" name="class" />
    </div>

    <input class="font button submit" type="submit" />
    <a class="font button cancel" href="/">Cancel</a>
</form>