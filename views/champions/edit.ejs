<link rel="stylesheet" type="text/css" href="/public/css/style.css" />

<h1>Edit Champion</h1>
<form class="form" action="/champions/<%=id%>?_method=PUT" method="POST">
    <div class="inputParent">
        <label class="font" for="name">Name:</label>
        <input class="font input" type="text" name="name" value="<%=name%>" />
        <label class="font" for="img">Image:</label>
        <input class="font input" type="'text" name="img" value="<%=img%>" />
        <label class="font" for="cost">Cost:</label>
        <input class="font input" type="'text" name="cost" value="<%=cost%>" />
        <label class="font" for="origin">Origin:</label>
        <input class="font input" type="'text" name="origins" value="<%=origins%>" />
        <label class="font" for="class">Class:</label>
        <input class="font input" type="'text" name="classes" value="<%=classes%>" />
        <label class="font" for="img2">Header Image:</label>
        <input class="font input" type="text" name="img2" value="<%=img2%>" />
        <label class="font" for="bio">Bio:</label>
        <input class="font input" type="text" name="bio" value="<%=bio%>" />
        <label class="font" for="ability">Ability</label>
        <input class="font input" type="text" name="ability" value="<%=ability%>" />
    </div>

    <input class="font button submit" type="submit" />
    <a class="font button cancel" href="/champions">Cancel</a>
</form>