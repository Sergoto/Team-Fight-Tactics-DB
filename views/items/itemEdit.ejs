<link rel="stylesheet" type="text/css" href="/public/css/style.css" />

<h1>Edit Item</h1>
<form class="form" action="/items/<%=id%>?_method=PUT" method="POST">
    <div class="inputParent">
        <label class="font" for="name">Name:</label>
        <input class="font input" type="text" name="name" value="<%=name%>" />
        <label class="font" for="img">Image:</label>
        <input class="font input" type="'text" name="img" value="<%=img%>" />
        <label class="font" for="effect">Effect:</label>
        <input class="font input" type="'text" name="effect" value="<%=effect%>" />
        <label class="font" for="isUnique">Unique:</label>
        <input class="font input" type="'text" name="isUnique" value="<%=isUnique%>" />
        <label class="font" for="isComponent">Component:</label>
        <input class="font input" type="'text" name="isComponent" value="<%=isComponent%>" />
    </div>

    <input class="font button submit" type="submit" />
    <a class="font button cancel" href="/items">Cancel</a>
</form>