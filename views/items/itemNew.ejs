<link rel="stylesheet" type="text/css" href="/public/css/style.css" />

<h1>Add Item</h1>
<form class="form" action="/items/add" method="POST">
    <div class="inputParent">
        <label class="font" for="name">Name:</label>
        <input class="font input" type="text" name="name" />
        <label class="font" for="img">Image:</label>
        <input class="font input" type="text" name="img" />
        <label class="font" for="effect">Effect:</label>
        <input class="font input" type="text" name="effect" />
        <label class="font" for="isUnique">Unique:</label>
        <input class="font input" type="text" name="isUnique" />
        <label class="font" for="isArtifact">Artifact:</label>
        <input class="font input" type="text" name="isArtifact" />
    </div>

    <input class="font button submit" type="submit" />
    <a class="font button cancel" href="/">Cancel</a>
</form>